@model IEnumerable<MVCAndOOP.Models.Product>

@{
    ViewBag.Title = "Index";
}





    <div class="jumbotron jumbotron-fluid">
        <div class="container">


            <p>   @Html.ActionLink("go to cart", "CartList", "Store", null, new { @class = "btn btn-primary btn-large" })</p>


            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="column">


                        <div class="card">
                            <div class="card-header">@Html.DisplayFor(modelItem => item.Name)</div>
                            <div class="card-body">

                                <p>@Html.DisplayFor(modelItem => item.Description)</p>
                                <p>Price: @Html.DisplayFor(modelItem => item.Price)</p>

                            </div>
                            <div class="card-footer">  @Html.ActionLink("Add to Cart", "AddtoCart", "Store", new { item }, new { @class = "btn btn-info" })</div>
                        </div>



                    </div>
                    //AddtoCart
                }
                </div>

            </div>
        </div>



